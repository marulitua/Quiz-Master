<script type="text/template" id="header-link">
  <a href="#<%%- url %>"><%%- name %></a>
</script>

<script type="text/template" id="about-message">
  <h1>About this application</h1>
  <p>This is only a game.</p>
</script>

<script type="text/template" id="question-tpl">
  <div class="row">
    <div class="col-sm-12">
      <p><%%- question %></p>
    </div>
    <div class="col-sm-12">
      <textarea></textarea>
    </div>
    <div class="col-sm-12">
      <button type="button" class="btn btn-primary btn-lg"><span class="fa fa-check"></span>Submit</button>
    </div>
  </div>
</script>

<script type="text/template" id="tpl-home">
  <div class="play-ground">
    <h2>Gonna guess 'em all</h2>
    <p>
      <button type="button" class="btn btn-primary btn-lg"><span class="fa fa-play"></span> Start Game</button>
      <button type="button" class="btn btn-default btn-lg">How To Play</button>
    </p>
  </div>
</script>