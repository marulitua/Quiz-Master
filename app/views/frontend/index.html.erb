<header class="bs-header">
  <div class="container">
    <h1>Trivia Questions</h1>
    <p>Gonna guess 'em all</p>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-xs-12 main-container">
    </div>
  </div>
</div>

<script type="text/template" id="tpl-questions">
  <h2 class="page-header text-center">List of questions</h2>
  <p class="text-center">
    <a href="#questions/new" class="btn btn-lg btn-outline add-question-btn">Add question</a>
  </p>
  <ul class="media-list row questions-container"></ul>
</script>

<script type="text/template" id="tpl-question">
  <div class="media-heading">
    <h3>
      <%%- question %>
      <small>
        <a href="#questions/edit/<%%- id %>"><span class="glyphicon glyphicon-pencil edit-contract"></span></a>
        <a href="#questions/delete/<%%- id %>" class="delete-contract">
          <span class="glyphicon glyphicon-trash"></span>
        </a>
      </small>
    </h3>
  </div>
  <div class="media-body">
    <dl>
      <dt>Answer:</dt>
      <dd><%%- answer %></dd>
    </dl>
  </div>
  <hr>
</script>

<script type="text/template" id="tpl-new-question">
  <h2 class="page-header text-center"><%%= isNew ? 'Create' : 'Edit' %> question</h2>
  <form role="form" class="form-horizontal contract-form">
    <div class="form-group">
      <label class="col-sm-4 control-label">Question:</label>
      <div class="col-sm-6">
        <input type="text" class="form-control question-question-input" value="<%%- question %>">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-4 control-label">Answer:</label>
      <div class="col-sm-6">
        <input type="text" class="form-control question-answer-input" value="<%%- answer %>">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-4 control-label">Publish</label>
      <div class="col-sm-1">
        <input type="checkbox" class="form-control question-answer-publish" value="<%%- published_at %>">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-3">
        <button type="submit" class="btn btn-outline btn-lg btn-block">Submit</button>
      </div>
      <div class="col-sm-3">
        <a href="#questions" class="btn btn-outline btn-lg btn-block form-cancel-btn">Cancel</a>
      </div>
    </div>
  </form>
</script>
